<% content_for :title, "Create a Goal" %>

<div class="goal-form-container">
  <div class="goal-form-card">
    <h1>What is your Goal?</h1>
    <p class="subtitle">Tell me about the goal you would like to achieve.</p>

    <%= form_with model: @goal, local: true, class: "goal-form" do |form| %>
      <div class="form-group">
        <%= form.label :description, "Goal Description", class: "form-label" %>
        <%= form.text_area :description,
            placeholder: "Describe your goal in detail. What exactly do you want to achieve? Why is this important to you?",
            rows: 4,
            class: "form-textarea #{'error' if @goal.errors[:description].any?}" %>
        <% if @goal.errors[:description].any? %>
          <div class="error-message"><%= @goal.errors[:description].first %></div>
        <% end %>
      </div>

      <div class="form-group">
        <%= form.label :frequency, "Check-in Frequency", class: "form-label" %>
        <p class="help-text">How often would you like us to check in with you about this goal?</p>
        <div class="frequency-options">
          <label class="frequency-option">
            <%= form.radio_button :frequency, "daily", class: "frequency-radio" %>
            <div class="frequency-card">
              <div class="frequency-icon">ðŸ“…</div>
              <h3>Daily</h3>
              <p>Perfect for habits and daily routines</p>
            </div>
          </label>

          <label class="frequency-option">
            <%= form.radio_button :frequency, "weekly", class: "frequency-radio" %>
            <div class="frequency-card">
              <div class="frequency-icon">ðŸ“Š</div>
              <h3>Weekly</h3>
              <p>Great for ongoing projects and progress tracking</p>
            </div>
          </label>

          <label class="frequency-option">
            <%= form.radio_button :frequency, "monthly", class: "frequency-radio" %>
            <div class="frequency-card">
              <div class="frequency-icon">ðŸŽ¯</div>
              <h3>Monthly</h3>
              <p>Ideal for long-term goals and milestones</p>
            </div>
          </label>
        </div>
        <% if @goal.errors[:frequency].any? %>
          <div class="error-message"><%= @goal.errors[:frequency].first %></div>
        <% end %>
      </div>

      <div class="form-actions">
        <%= form.submit "Create My Goal", class: "submit-btn" %>
      </div>
    <% end %>
  </div>
</div>
