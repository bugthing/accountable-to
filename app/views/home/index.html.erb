<% content_for :title, "Accountable To - Stay Committed to Your Goals" %>

<div class="hero-section">
  <div class="container">
    <div class="hero-content">
      <h1 class="hero-title">
        Stay <span class="highlight">Accountable</span> to Your Goals
      </h1>
      <p class="hero-subtitle">
        Transform your aspirations into achievements with personalized check-ins and AI-powered guidance
      </p>

      <div class="features-grid">
        <div class="feature">
          <div class="feature-icon">ðŸŽ¯</div>
          <h3>Set Clear Goals</h3>
          <p>Define what matters most to you with specific, actionable objectives</p>
        </div>
        <div class="feature">
          <div class="feature-icon">ðŸ“…</div>
          <h3>Regular Check-ins</h3>
          <p>Choose how often we check in - daily, weekly, or monthly</p>
        </div>
        <div class="feature">
          <div class="feature-icon">ðŸ¤–</div>
          <h3>AI-Powered Support</h3>
          <p>Get personalized insights and motivation to keep you on track</p>
        </div>
      </div>
    </div>

    <div class="signup-form">
      <h2>Start Your Journey Today</h2>
      <p>Join thousands who are already achieving their goals</p>

      <%= form_with model: @user, url: signup_path, local: true, class: "email-form" do |form| %>
        <div class="form-group">
          <%= form.email_field :email,
              placeholder: "Enter your email address",
              class: "email-input #{'error' if @user.errors[:email].any?}",
              required: true %>
          <%= form.submit "Get Started Free", class: "submit-btn" %>
        </div>
      <% end %>

      <% if @existing_user %>
        <div class="existing-user-message">
          <p>This email is already registered!</p>
          <% if @existing_user.confirmed? %>
            <%= form_with url: send_magic_link_path, method: :post, local: true, class: "magic-link-form" do |form| %>
              <%= form.hidden_field :email, value: @existing_user.email %>
              <%= form.submit "Send Magic Link to Login", class: "magic-link-btn" %>
            <% end %>
            <p class="magic-link-note">We'll send you a secure link to login instantly</p>
          <% else %>
            <p class="confirmation-note">Please check your email to confirm your account first.</p>
          <% end %>
        </div>
      <% elsif @user.errors[:email].any? %>
        <div class="error-message">
          <%= @user.errors[:email].first %>
        </div>
      <% end %>

      <p class="privacy-note">
        âœ“ Free forever &nbsp;&nbsp; âœ“ No spam &nbsp;&nbsp; âœ“ Unsubscribe anytime
      </p>
    </div>
  </div>
</div>

<div class="how-it-works">
  <div class="container">
    <h2>How It Works</h2>
    <div class="steps">
      <div class="step">
        <div class="step-number">1</div>
        <h3>Sign Up</h3>
        <p>Enter your email and confirm your account</p>
      </div>
      <div class="step">
        <div class="step-number">2</div>
        <h3>Set Your Goal</h3>
        <p>Tell us what you want to achieve and how often to check in</p>
      </div>
      <div class="step">
        <div class="step-number">3</div>
        <h3>Stay Accountable</h3>
        <p>Receive regular check-ins and AI-powered guidance</p>
      </div>
    </div>
  </div>
</div>

